<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:orientation="horizontal"
    android:background="#000000">
        <Button
            android:id="@+id/menu_hundred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="#000000"
            android:textColor="#696969"
            android:onClick="gotoHundred"
            android:text="Top 100"/>
        <Button
            android:id="@+id/menu_mylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="#000000"
            android:textColor="#696969"
            android:onClick="gotoMylist"
            android:text="My List"/>
        <Button
            android:id="@+id/menu_Groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="#000000"
            android:textColor="#696969"
            android:onClick="gotoGroups"
            android:text="Groups"/>
        <Button
            android:id="@+id/menu_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="#000000"
            android:textColor="#696969"
            android:onClick="gotoMoney"
            android:text="Earn Money"/>
        <Button
            android:id="@+id/menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="#000000"
            android:textColor="#696969"
            android:onClick="gotoSettings"
            android:text="Settings"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:textColor="#000000"
        android:text="Group Name"/>
    <TextView
        android:id="@+id/groupentry"
        android:layout_below="@id/groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:paddingRight="5dp"
        android:textColor="#808080"
        android:text="Group Entry"/>
    <TextView
        android:id="@+id/groupprize"
        android:layout_below="@id/groupname"
        android:layout_toRightOf="@id/groupentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:paddingRight="5dp"
        android:textColor="#808080"
        android:text="Group Prize"/>
    <TextView
        android:id="@+id/groupwinners"
        android:layout_below="@id/groupentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:paddingRight="5dp"
        android:textColor="#808080"
        android:text="Group Winner"/>
    <TextView
        android:id="@+id/groupend"
        android:layout_below="@id/groupwinners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:textColor="#808080"
        android:text="Group End"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:layout_marginTop="350dp"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="50dp"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:text="JOIN"
            android:id="@+id/join_group"
            android:layout_gravity="center_vertical"
            android:onClick="submitJoin" />

        <Button
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:text="BACK"
            android:id="@+id/back_grouplist"
            android:layout_gravity="center_vertical"
            android:onClick="goBack" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
        <include layout="@layout/mainmenu"
            android:id="@+id/footer"/>
    </RelativeLayout>
</RelativeLayout>